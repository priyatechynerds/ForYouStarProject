<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.priya.foryoustarproject.CompanyNextPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgid"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/foryou_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MobileName"
        android:layout_below="@+id/imgid"
        android:layout_marginTop="29dp"
        android:text="ggjfkbjkklmnjuj,m"
        android:textColor="#000000"
        android:layout_marginLeft="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MobilePrice"
        android:layout_alignLeft="@+id/MobileName"
        android:layout_alignStart="@+id/MobileName"
        android:layout_below="@+id/MobileName"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:text="Price"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <Button
        android:id="@+id/btnnext"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"
        android:layout_weight="0"
        android:text="Next"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/button_blue"/>




</LinearLayout>
